<div>
    <p id="playername" hidden>{{ playername }}</p>
    <div class="gamepanel"></div>
    <div class="statuspanel">
        <div class="status"><h2>Status</h2><b>Miss Scarlett</b> did it with the <b>lead pipe</b> in the <b>ball room</b>.</div>
        <div class="myguess"></div>
        <div class="guessorder">
            <table>
                <tr>
                    <th>Player</th>
                    <th>Answer</th>
                </tr>
                <tr>
                    <td>Player1</td>
                    <td class="pass">Pass</td>
                </tr>
                <tr>
                    <td>Player2</td>
                    <td class="pass">Pass</td>
                </tr>
                <tr>
                    <td>Player3</td>
                    <td class="pass">Pass</td>
                </tr>
                <tr>
                    <td>Player3</td>
                    <td class="show">Show</td>
                </tr>
                <tr>
                    <td>Player4</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Player5</td>
                    <td></td>
                </tr>
            </table>
        </div>
        <div class="userresponse">
            <img src="media/test.jpg" alt="Test" onclick='card_selected("Test")'/>
        </div>
        <div class="mycards">
            <h2>My cards</h2>
            {% for card_ in mycards %}
            <img src="{{ card_[1] }}" alt="{{ card_[0] }}" onclick='card_selected("{{ card_[0] }}")'/>
            {% endfor %}
        </div>
    </div>
</div>